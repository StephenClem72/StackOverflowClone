<h1>Title: <%=@question.title%></h1>
<p>Content:<br>
  <%=@question.content%>
<p>
  <%=@question.votes%><br>


  <%=link_to 'Edit Question', edit_question_path(@question.id)%>
  <%=link_to 'Delete Question', question_path(@question.id), method: :delete%>

  <h2>Answers:</h2>


    <%@question.answers.each do |answer|%>

      <button><%=link_to '^', upvote_question_answer_path(@question.id, answer), method: :patch%></button><br>
      <%=answer.votes%><br>
      <button><%=link_to 'v', downvote_question_answer_path(@question.id, answer), method: :patch%></button><br>
      <p>
        <strong>Title:</strong>
        <%=answer.title%>
      </p>

      <p>
        <strong>Answer:</strong>
        <%=answer.content%>
      </p>
    <%end%>

<h2>Your Answer</h2>
  <%=form_for([@question, @question.answers.build]) do |f|%>

    <p>
      <%= f.label :title%>:<br>
      <%= f.text_field :title%>
    </p>

    <p>
      <%= f.label :answer%>:<br>
      <%= f.text_area :content%>
    </p>

    <p>
      <%=f.submit%>
    </p>
  <%end%>