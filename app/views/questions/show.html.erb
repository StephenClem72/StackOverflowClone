<h1>Title: <%=@question.title%></h1>
<p>Content:<br>
  <%=@question.content%>
<p>

  <h2>Answers:</h2>
    <%@question.answers.each do |answer|%>
      <p>
        <strong>Title:</strong>
        <%=answer.title%>
      </p>

      <p>
        <strong>Answer:</strong>
        <%=answer.content%>
      </p>
    <%end%>

<h2>Your Answer</h2>
  <%=form_for([@question, @question.answers.build]) do |f|%>

    <p>
      <%= f.label :title%>:<br>
      <%= f.text_field :title%>
    </p>

    <p>
      <%= f.label :answer%>:<br>
      <%= f.text_area :content%>
    </p>

    <p>
      <%=f.submit%>
    </p>
  <%end%>